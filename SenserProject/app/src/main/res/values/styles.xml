<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- login style -->
    <style name="et_login_input" parent="mw">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:theme">@style/EditTheme</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:padding">20dp</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">-->
    <!--<item name="windowActionBar">false</item>-->
    <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="EditTheme" parent="AppTheme.NoActionBar">
        <item name="android:colorControlNormal">@color/textColor</item>
    </style>

    <style name="sign_up_button" parent="main_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_button_style">
        <item name="android:background">@drawable/ripple_effect_main_button</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ibtn_login">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ibtn_google" parent="ibtn_login">
        <item name="android:background">@drawable/ripple_effect_sns_icon</item>
        <!--<item name="android:src">@drawable/googleg_standard_color_18</item>-->
        <item name="android:scaleType">fitXY</item>
    </style>


    <style name="ibtn_kakao" parent="ibtn_login">
        <item name="android:background">@drawable/ripple_effect_sns_icon</item>
        <!--<item name="android:src">@drawable/kakao_account_logo</item>-->
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ibtn_naver" parent="ibtn_login">
        <item name="android:background">@drawable/naver_login_icon_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Light" >

        <item name="colorPrimary">@android:color/transparent</item>
    </style>



    <!-- sign up style -->
    <style name="sign_up_label_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="sign_up_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:theme">@style/EditTheme</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabLayoutTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="top_divide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lineColor</item>
    </style>

    <style name="ibtn_exercise_icon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="schedule_exercise_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="schedule_num_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#25568c</item>
        <item name ="android:layout_marginRight">2dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="schedule_label_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name ="android:layout_marginLeft">2dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="play_label_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="play_num_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="side_button_style" parent="main_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="gender_radio_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonTint">@color/textColor</item>
    </style>

</resources>
