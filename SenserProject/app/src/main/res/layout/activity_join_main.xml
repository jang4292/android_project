<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/streakColorPrimary">

    <include
        android:id="@+id/top_layer"
        layout="@layout/layout_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layer"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">


            <!--android:id="@+id/tv_email_label"-->
            <!--style="@style/sign_up_label_text"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/email_sign_up_text"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <!--android:id="@+id/et_email"-->
            <!--style="@style/sign_up_edit_text"-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/et_email"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_bg"
                    android:hint="@string/email_input_hint"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="40dp"
                    android:textColorHint="@color/join_hint_color"
                    android:textSize="16dp" />


                <Button
                    android:id="@+id/btn_duplicate"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/common_main_btn_n"
                    android:text="@string/button_duplicate_text"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

            </FrameLayout>
            <!--android:id="@+id/btn_duplicate"-->
            <!--style="@style/sign_up_button"-->

            <!--android:id="@+id/et_email_code"-->
            <!--style="@style/sign_up_edit_text"-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2">


                <EditText
                    android:id="@+id/et_email_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_bg"
                    android:hint="@string/code_input_hint"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="40dp"
                    android:textColorHint="@color/join_hint_color"
                    android:textSize="16dp"
                    tools:ignore="TextFields" />

                <Button
                    android:id="@+id/btn_code_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/common_main_btn_n"
                    android:text="@string/button_confirm_text"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <!--android:id="@+id/tv_email_label"-->
            <!--style="@style/sign_up_label_text"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/pw_sign_up_text"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <!--android:id="@+id/et_email"-->
            <!--style="@style/sign_up_edit_text"-->


            <EditText
                android:id="@+id/edit_join_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@drawable/input_bg"
                android:hint="@string/password_input_hint"
                android:inputType="textPassword"
                android:textColorHint="@color/join_hint_color"
                android:textSize="16dp" />


            <!--android:id="@+id/btn_duplicate"-->
            <!--style="@style/sign_up_button"-->

            <!--android:id="@+id/et_email_code"-->
            <!--style="@style/sign_up_edit_text"-->
            <EditText
                android:id="@+id/edit_join_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/input_bg"
                android:hint="@string/password_comp_input_hint"
                android:inputType="textPassword"
                android:textColorHint="@color/join_hint_color"
                android:textSize="16dp"
                tools:ignore="TextFields" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/confirmed_agree"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/common_divideline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/service_agree"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/cb_agree_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/private_information__agree"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/cb_agree_private_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <!--android:id="@+id/btn_next"-->
            <!--style="@style/sign_up_button"-->
            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_main_btn_n"
                android:text="@string/button_next_text"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>
