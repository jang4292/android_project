<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/streakColorPrimary"
    android:orientation="vertical">

    <include
        android:id="@+id/top_layer"
        layout="@layout/layout_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/sign_up_nick"
            android:textColor="@color/textColor"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_bg"
                android:gravity="center|left"
                android:hint="@string/sign_up_nick_hint"
                android:inputType="text"
                android:paddingVertical="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="40dp"
                android:textColorHint="@color/join_hint_color"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_name_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/common_main_btn_n"
                android:text="@string/button_duplicate_text"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/sign_up_gender_hint2"
            android:textColor="@color/textColor"
            android:textSize="14dp" />

        <RadioGroup
            android:id="@+id/radio_group_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:checkedButton="@+id/rg_btn_male"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rg_btn_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/join_male_img" />

            <RadioButton
                android:id="@+id/rg_btn_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/join_female_img" />
        </RadioGroup>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
