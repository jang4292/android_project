                android:layout_weight="1">

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </FrameLayout>

        </LinearLayout>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/sign_up_height"
            android:textColor="@color/textColor"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="@string/sign_up_height_hint"
            android:inputType="number"
            android:padding="5dp"
            android:textColorHint="@color/join_hint_color"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/sign_up_weight"
            android:textColor="@color/textColor"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="@string/sign_up_weight_hint"
            android:inputType="number"
            android:padding="5dp"
            android:textColorHint="@color/join_hint_color"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/sign_up_age"
            android:textColor="@color/textColor"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:hint="@string/sign_up_age_hint"
            android:padding="5dp"
            android:inputType="number"
            android:textColorHint="@color/join_hint_color"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/sign_up_nick"
            android:textColor="@color/textColor"
            android:textSize="14dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_bg"
                android:gravity="center|left"
                android:paddingVertical="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="40dp"
                android:text="@string/sign_up_location_hint"
                android:textColor="@color/join_hint_color"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_region"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/common_main_btn_n"
                android:text="@string/button_confirm_choose"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

        </FrameLayout>

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/common_main_btn_n"
            android:text="@string/sign_up_complete"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </LinearLayout>

