        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_my_infomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_password"
        android:text="나의정보"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_my_infomation"
        android:text="약관보기"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_rule"
        android:text="로그아웃"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_log_out"
        android:text="회원탈퇴"
        android:textSize="20dp" />-->


    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_shadow" />-->


</LinearLayout>
