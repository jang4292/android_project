<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bpm202.SensorProject">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Account.LoginActivity" />
        <activity
            android:name=".Main.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity android:name=".Account.FindPasswordActivity" />
        <activity
            android:name=".Account.JoinActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Account.JoinDetailsActivity"
            android:windowSoftInputMode="stateHidden" />
        <!--<activity-->
            <!--android:name=".Account.SignUpActivity"-->
            <!--android:windowSoftInputMode="stateHidden" />-->
        <activity
            android:name=".Account.RegionActivity"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".Main.Schedules.PlanAddActivity"
            android:screenOrientation="portrait"

            android:windowSoftInputMode="stateUnspecified" />

        <activity
            android:name=".Main.Exercise.NoSettingExerciseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Main.Exercise.MainExerciseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".Main.History.HistoryDateActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".Main.History.HistoryDayActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />



    </application>

</manifest>